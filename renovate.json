{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "area/dependency"
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "schedule": [
    "* * * * 6,0"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    ".github/workflows/gen_*"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sARG (\\w+_)?VERSION=(?<currentValue>\\S+)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/pkg.toml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+\"(?<currentValue>\\S+)\""
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/pkg.toml$/"
      ],
      "matchStrings": [
        "# renovate+git: datasource=(?<datasource>.*?) depName=(?<depName>.*?) packageName=(?<packageName>.*?)( versioning=(?<versioning>.*?))?\\s+\"(?<currentValue>\\S+)\""
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
